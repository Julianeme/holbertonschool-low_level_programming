#include <stdio.h>
#include "holberton.h"

/**
 *print_to_98 - descripciÃ³n: prints the natural numbers from n to 98.
  *
 *@n: int storing the starting point
 *
 */

void print_to_98(int n)
{
	int a;

	if (n > 98)
	{
		for (a = n; a >= 98; a--)
		{
			printf(n);
			if (a > 98)
			{
			_putchar(44);
			_putchar(32);
			}
		}
	}
		else if (n < 98)
		{
			for (a = n; a <= 98; a++)
			{
				printf(n);
				if (a > 98)
				{
				_putchar(44);
				_putchar(32);
				}
			}
		}
		else
			printf(98);
}
